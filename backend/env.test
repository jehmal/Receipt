NODE_ENV=test
PORT=3001

# Test Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=receiptvault_test
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/receiptvault_test

# Test JWT Configuration
JWT_SECRET=test-jwt-secret-key-for-testing-only
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Test Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=1

# Mock External Services in Tests
MOCK_WORKOS=true
MOCK_AWS=true
MOCK_GOOGLE_VISION=true

# Test Storage Configuration
STORAGE_BUCKET=test-receipt-storage
UPLOAD_PATH=/tmp/test-uploads

# Test Email Configuration
EMAIL_FROM=test@receiptvault.com
EMAIL_ENABLED=false

# Security Test Settings
CSRF_SECRET=test-csrf-secret
CORS_ORIGIN=http://localhost:3000

# Disable external services in tests
SNYK_TOKEN=
OWASP_ZAP_ENABLED=false

# Test Rate Limiting (Lower limits for testing)
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=10

# Test Logging
LOG_LEVEL=error
LOG_FILE=/dev/null 