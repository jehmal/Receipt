    "@fastify/rate-limit": "^8.0.3",
    "@fastify/static": "^6.10.2",
    "@google-cloud/vision": "^4.0.2",
    "aws-sdk": "^2.1419.0",
    "bcryptjs": "^2.4.3",
    "bullmq": "^4.8.0",
    "crypto": "^1.0.1",
    "csv-writer": "^1.6.0",
    "dotenv": "^16.3.1",
    "elasticsearch": "^16.7.3",
    "exceljs": "^4.4.0",
    "fastify": "^4.21.0",
    "file-type": "^21.0.0",
    "ioredis": "^5.3.2",
