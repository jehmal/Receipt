{
  "name": "receipt-vault-backend",
  "version": "1.0.0",
  "description": "Forever Receipt Vault - Backend API server",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
