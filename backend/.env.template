# Server Configuration
NODE_ENV=development
PORT=3000
HOST=0.0.0.0
TRUST_PROXY=false

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/receipt_vault
DB_POOL_MAX=20
DB_IDLE_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=2000

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT Configuration
JWT_SECRET=change-this-secret-in-production-minimum-32-chars
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
S3_BUCKET=receipt-vault-uploads
S3_REGION=us-east-1

# WorkOS Configuration
WORKOS_API_KEY=
WORKOS_CLIENT_ID=
WORKOS_REDIRECT_URI=http://localhost:3000/auth/callback
WORKOS_ORGANIZATION_ID=

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=
EMAIL_FROM=noreply@receiptvault.com

# Google Cloud Vision
GOOGLE_CLOUD_PROJECT_ID=
GOOGLE_APPLICATION_CREDENTIALS=

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=900000
CORS_ORIGINS=http://localhost:3000,http://localhost:8080
SESSION_SECRET=change-this-session-secret-minimum-32-chars
COOKIE_SECRET=change-this-cookie-secret-minimum-32-chars

# Logging Configuration
LOG_LEVEL=debug

# Feature Flags
ENABLE_WORKOS_AUTH=true
ENABLE_GOOGLE_VISION=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_WEBHOOKS=false

# Vault Configuration (Production Only)
VAULT_ADDR=
VAULT_TOKEN=
VAULT_NAMESPACE=

# Monitoring Configuration
DATADOG_API_KEY=
DATADOG_APP_KEY=
SENTRY_DSN=
NEW_RELIC_LICENSE_KEY=
